# Dockerfile for running tests in isolated container
FROM node:20-alpine AS base

WORKDIR /app

# Install dependencies for Playwright
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    curl

# Set Playwright to use system Chromium
ENV PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1
ENV PLAYWRIGHT_CHROMIUM_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Copy package files
COPY package*.json ./
COPY bun.lockb ./

# Install dependencies (use npm install to avoid lockfile mismatch failures in CI)
RUN npm install --no-audit --no-fund

# Copy source code
COPY . .

# ============================================
# Unit Tests Stage
# ============================================
FROM base AS unit-tests

CMD ["npx", "vitest", "run"]

# ============================================
# Integration Tests Stage
# ============================================
FROM base AS integration-tests

CMD ["npx", "vitest", "run", "src/test/integration"]

# ============================================
# E2E Tests Stage
# ============================================
FROM base AS e2e-tests

# Build the application first
RUN npm run build

CMD ["npx", "playwright", "test"]

# ============================================
# Coverage Stage
# ============================================
FROM base AS coverage

CMD ["npx", "vitest", "run", "--coverage"]

# ============================================
# All Tests Stage (default)
# ============================================
FROM base AS all-tests

RUN npm run build

CMD ["sh", "-c", "npx vitest run && npx playwright test"]
